<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Cross browser testing" thread-count="5" parallel="tests">
	<listeners>
		<listener class-name="com.sevenrmartsupermarket.listners.ExtentReporter"></listener>
	</listeners>
	<test name="Executing in Chrome">
		<parameter name="browser" value="chrome"></parameter>
		<classes>
			<class name="com.sevenrmartsupermarket.tests.PushNotificationsTest"></class>
		</classes>
	</test>

	<test name="Executing in FireFox">
		<parameter name="browser" value="firefox"></parameter>
		<classes>
			<class name="com.sevenrmartsupermarket.tests.PushNotificationsTest"></class>

		</classes>
	</test>

	<test name="Executing in Edge">
		<parameter name="browser" value="edge"></parameter>
		<classes>
			<class name="com.sevenrmartsupermarket.tests.PushNotificationsTest"></class>
		</classes>
	</test>

</suite>