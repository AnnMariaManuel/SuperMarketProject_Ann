<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="parallel execution" thread-count="10" parallel="tests">
	<listeners>
		<listener class-name="com.sevenrmartsupermarket.listners.ExtentReporter"></listener>
	</listeners>

	<test name="Smoke Execution">
		<classes>
			<class name="com.sevenrmartsupermarket.tests.LoginTest"></class>
		</classes>
	</test>

	<test name="Sanity Execution">
		<classes>
			<class name="com.sevenrmartsupermarket.tests.ManageExpenseTest"></class>
			<class name="com.sevenrmartsupermarket.tests.AdminUserTest"></class>
		</classes>
	</test>

	<test name="Regression Execution">
		<classes>
			<class name="com.sevenrmartsupermarket.tests.PushNotificationsTest"></class>
		</classes>
	</test>

<test name="Functional Execution">
		<classes>
			<class name="com.sevenrmartsupermarket.tests.PushNotificationsTest"></class>
		</classes>
	</test>

</suite>



